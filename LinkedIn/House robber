class Solution {
    public int rob(int[] nums) {
        
        
      int n=nums.length;
        
        if(n==0) return 0;
        if(n==1) return nums[0];
        if(n==2) return Math.max(nums[0],nums[1]);
        
        int[] sum=new int[n];
        
        
        sum[0]=nums[0];
        sum[1]=Math.max(nums[0],nums[1]);
        for(int i=2;i<n;i++)
        {
           sum[i]=Math.max(sum[i-1],sum[i-2]+nums[i]);
        }
        
        
        return sum[n-1];
        
        
        
    }
}
